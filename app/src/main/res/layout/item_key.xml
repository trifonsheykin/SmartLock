<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="16dp"
            android:src="@drawable/ic_fiber_manual_record_black_24dp"
            android:visibility="visible"
            tools:srcCompat="@drawable/ic_fiber_manual_record_black_24dp" />

        <TextView
            android:id="@+id/tvKeyTitle"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="21dp"
            android:text="Door title"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvKeyUser"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_gravity="left"
        android:layout_marginStart="64dp"
        android:layout_marginRight="64dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Access time"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Key status" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_weight="1"
        android:background="@android:color/darker_gray" />

</LinearLayout>